.list
    border-left: 1px solid $color_dark
    border-bottom: 1px solid $color_dark
    height: 250px
    font-family: $fontRoboto
    box-sizing: border-box
    padding-bottom: 3px

    &__item
        padding: 5px
        background: $color_pink
        box-sizing: border-box
        display inline-block
        vertical-align: bottom
        text-align: center
        border-radius: 5px
        font-weight: 500
        font-size: 14px
        margin-left: 3px
        width: 30px
        color: $color_dark

        &_flood
            background: $color_mint

        &:after
            content ''
            height 100%
            display inline-block
            vertical-align: bottom

    &:after
        content ''
        height 100%
        display inline-block
        vertical-align: bottom
